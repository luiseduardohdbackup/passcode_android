<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout 
        android:layout_marginTop="25dp"
        android:id="@+id/container_header"
        android:layout_width="fill_parent"
        android:orientation="vertical"      
        android:layout_height="wrap_content">
        
        <TextView
        android:id="@+id/passcode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"    
        android:text="Enter your passcode"    
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <LinearLayout
        android:id="@+id/container_button"        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/passcode1"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:textSize="40sp"
            android:background="@drawable/background_text_2"
            android:gravity="center"
            android:password="true" >
        </EditText>

        <EditText
            android:id="@+id/passcode2"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:textSize="40sp"
            android:maxLength="1"
            android:background="@drawable/background_text_2"
            android:gravity="center"
            android:password="true" >
        </EditText>

        <EditText
            android:id="@+id/passcode3"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:textSize="40sp"
            android:background="@drawable/background_text_2"
            android:gravity="center"
            android:password="true" >
        </EditText>

        <EditText
            android:id="@+id/passcode4"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="48dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:textSize="40sp"
            android:background="@drawable/background_text_2"
            android:gravity="center"
            android:password="true">
            
        </EditText>
    </LinearLayout>        
    </LinearLayout>
        
    <TableLayout
        android:id="@+id/row1"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <TableRow android:layout_weight="1" >

            <Button
                android:id="@+id/n1"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/empty_button"
                android:textSize="30sp"
                android:gravity="center|center_vertical"
                android:text="1" />

            <Button
                android:id="@+id/n2"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:gravity="center|center_vertical"
                android:background="@drawable/empty_button"
                android:text="2" />

            <Button
                android:id="@+id/n3"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:gravity="center|center_vertical"
                android:background="@drawable/empty_button"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/n4"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:gravity="center|center_vertical"
                android:background="@drawable/empty_button"
                android:text="4" />

            <Button
                android:id="@+id/n5"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:gravity="center|center_vertical"
                android:background="@drawable/empty_button"
                android:text="5" />

            <Button
                android:id="@+id/n6"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:gravity="center|center_vertical"
                android:background="@drawable/empty_button"
                android:text="6" />
        </TableRow>

        <TableRow android:layout_weight="1" >

            <Button
                android:id="@+id/n7"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:textSize="30sp"
                android:background="@drawable/empty_button"
                android:text="7" />

            <Button
                android:id="@+id/n8"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:gravity="center|center_vertical"
                android:background="@drawable/empty_button"
                android:text="8" />

            <Button
                android:id="@+id/n9"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:gravity="center|center_vertical"
                android:background="@drawable/empty_button"
                android:text="9" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/n0"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center|center_vertical"
                android:layout_weight="1"
                android:textSize="30sp"
                android:background="@drawable/empty_button"
                android:text="0" />

            <Button
                android:id="@+id/back"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:gravity="center|center_vertical"
                android:background="@drawable/empty_button"
                android:text="Back" />
        </TableRow>
    </TableLayout>

</RelativeLayout>